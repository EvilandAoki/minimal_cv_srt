---
import { skills } from "@cv";
import Section from "../Section.astro";
import { Icon } from "astro-icon/components";
---

<Section title="Habilidades">
    <ul class="skill-cards">
        {
            skills.map(({ name, icon, level, keywords }) => (
                <li class="skill-card">
                    <div class="card-header">
                        <Icon name={icon} class="skill-icon" />
                        <div>
                            <h3 class="skill-name">{name}</h3>
                            <span
                                class="skill-level"
                                data-level={level.toLowerCase()}
                            >
                                {level}
                            </span>
                        </div>
                    </div>
                    <div class="keywords">
                        {keywords.map((keyword) => (
                            <span class="keyword">{keyword}</span>
                        ))}
                    </div>
                </li>
            ))
        }
    </ul>
</Section>

<style>
    .skill-cards {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        padding: 0;
        margin: 0;
    }

    .skill-card {
        background: #f8f8f8;
        border-radius: 8px;
        padding: 0.8rem;
        width: 180px;
        list-style: none;
        border: 1px solid #e0e0e0;
        page-break-inside: avoid;
    }

    .card-header {
        display: flex;
        gap: 0.75rem;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .skill-icon {
        font-size: 1.5rem;
        color: #2c3e50;
        flex-shrink: 0;
    }

    .skill-name {
        margin: 0;
        font-size: 0.95rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .skill-level {
        display: block;
        font-size: 0.75rem;
        font-weight: 500;
        color: white;
        padding: 0.15rem 0.5rem;
        border-radius: 12px;
        margin-top: 0.2rem;
    }

    .skill-level[data-level="master"] {
        background-color: #27ae60;
    }

    .skill-level[data-level="avanzado"] {
        background-color: #2980b9;
    }

    .keywords {
        display: flex;
        flex-wrap: wrap;
        gap: 0.3rem;
        margin-top: 0.5rem;
    }

    .keyword {
        background: #e0e0e0;
        padding: 0.15rem 0.5rem;
        border-radius: 4px;
        font-size: 0.7rem;
        color: #2c3e50;
    }

    @media print {
        .skill-card {
            background: transparent;
            border: 1px solid #ddd;
            width: 170px;
        }

        .keyword {
            background: transparent;
            border: 1px solid #ddd;
        }

        .skill-level {
            color: black !important;
            background-color: #ddd !important;
        }
    }
</style>
